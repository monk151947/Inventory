<tr id="<%= dom_id store_item %>">
        <td><%= link_to store_item.id, store_item_path(store_item) %></td>
        <td><%= store_item.name %></td>
        <td><%= store_item.store_type_name %></td>
        <td><%= store_item.store_name  %></td>
        <td><%= store_item.store_category_name  %></td>
        <td><%= store_item.price %></td>
        <td><%= store_item.quantity %></td>
        <td><%= store_item.tax %></td>
        
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_store_item_path(store_item), :class => 'btn btn-mini', :remote => true %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      store_item_path(store_item),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger', :remote => true %>
        </td>
      </tr>