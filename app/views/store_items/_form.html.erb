<%= form_for @store_item, :html => { :class => 'form-horizontal' } do |f| %>
<%= render 'shared/error_msg', object: f.object %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :store_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :store_type_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :store_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :store_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :store_category_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :store_category_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :price, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :quantity, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tax, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :tax, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                store_items_path, :class => 'btn' %>
  </div>
<% end %>

