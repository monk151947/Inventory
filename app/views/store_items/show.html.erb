<%- model_class = StoreItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @store_item.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:store_type_id) %>:</strong></dt>
  <dd><%= @store_item.store_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:store_id) %>:</strong></dt>
  <dd><%= @store_item.store_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:store_category_id) %>:</strong></dt>
  <dd><%= @store_item.store_category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @store_item.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @store_item.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tax) %>:</strong></dt>
  <dd><%= @store_item.tax %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              store_items_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_store_item_path(@store_item), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              store_item_path(@store_item),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
